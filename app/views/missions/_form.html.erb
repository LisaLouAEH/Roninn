<%= form_with(model: mission, local: true) do |form| %>
  <% if mission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mission.errors.count, "error") %> prohibited this mission from being saved:</h2>

      <ul>
      <% mission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="ui form">
  <div class="field">
    <label>add an image to your mission:</label>
    <%= form.text_field :image %>
    
  </div>

  <div class="field">
    <label>Title of your mission:</label>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <label>describe your message with as much is possible of details:</label>
    <%= form.text_area :description %>
  </div>

  <div class="field">
   <label>for when would you like your mission is completed ?</label>
    <%= form.datetime_select :deadline %>
  </div>

  <div class="field">
    <label>which kind of technologies, if you have any, would you like will be used on your mission?</label>
    <%= form.text_field :techno %>
  </div>

  <div class="field">
    <label>Status of the mission (available, in progress, or complete)</label>
    <%= form.text_field :status %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>